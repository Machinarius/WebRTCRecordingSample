    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Server",
            "runtimeArgs": ["-r", "ts-node/register"],
            "skipFiles": [
                "<node_internals>/**",
                "node_modules/**"
